import streamlit as st
import pandas as pd
import plotly.graph_objects as go
from datetime import datetime, timedelta

# ---------- Config ----------
st.set_page_config(page_title="ğŸ“¦ Product Sales Dashboard", layout="wide")
st.title("ğŸ“¦ Product Sales Performance Dashboard")

# ---------- Load Data ----------
@st.cache_data
def load_data():
    df = pd.read_excel("sorted_file.xlsx")
    df['date'] = pd.to_datetime(df['date'])
    return df

df = load_data()

# ---------- Time Range Selector ----------
time_options = {
    "1 Week": 7,
    "1 Month": 30,
    "1 Year": 365,
    "2 Years": 730
}
time_selection = st.radio("Select Time Range:", list(time_options.keys()), horizontal=True)
reference_date = df['date'].max()
start_date = reference_date - timedelta(days=time_options[time_selection])
df_filtered = df[(df['date'] >= start_date) & (df['date'] <= reference_date)]

# ---------- Metrics: Total Orders Sold ----------
total_orders = df_filtered['total_orders'].sum()
prev_period_start = start_date - timedelta(days=time_options[time_selection])
prev_period = df[(df['date'] >= prev_period_start) & (df['date'] < start_date)]
prev_total_orders = prev_period['total_orders'].sum()
delta = total_orders - prev_total_orders
delta_percent = (delta / prev_total_orders * 100) if prev_total_orders else 0

# ---------- Data Prep ----------
top_products = df_filtered.groupby('product')['total_orders'].sum().reset_index()
top_products = top_products.sort_values(by='total_orders', ascending=False)

# ---------- Layout ----------
col1, col2, col3 = st.columns([1, 1, 2])

with col1:
    st.metric(label="Total Orders Sold", value=f"{total_orders:,}", delta=f"{delta_percent:.1f}%")

with col2:
    st.markdown("**ğŸ” Top 5 Products (Vertical Bar Chart)**")
    top_5 = top_products.head(5)
    fig_top = go.Figure(go.Bar(x=top_5['product'], y=top_5['total_orders'], marker_color='green'))
    fig_top.update_layout(height=300, showlegend=False, margin=dict(l=0, r=0, t=30, b=0))
    st.plotly_chart(fig_top, use_container_width=True)

with col3:
    st.markdown("**ğŸ“ˆ All Product Trends (Horizontal Bar Chart)**")
    all_products = top_products.sort_values(by='total_orders', ascending=False)
    fig_all = go.Figure(go.Bar(y=all_products['product'], x=all_products['total_orders'], orientation='h', marker_color='blue'))
    fig_all.update_layout(height=500, showlegend=False, margin=dict(l=0, r=0, t=30, b=0))
    st.plotly_chart(fig_all, use_container_width=True)

col4, col5 = st.columns([1, 1])

with col4:
    st.markdown("**ğŸ“‰ Bottom 5 Products (Vertical Bar Chart)**")
    bottom_5 = top_products.sort_values(by='total_orders', ascending=True).head(5)
    fig_bottom = go.Figure(go.Bar(x=bottom_5['product'], y=bottom_5['total_orders'], marker_color='red'))
    fig_bottom.update_layout(height=300, showlegend=False, margin=dict(l=0, r=0, t=30, b=0))
    st.plotly_chart(fig_bottom, use_container_width=True)
